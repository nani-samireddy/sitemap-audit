{
    "manifest_version": 3,
    "name": "Sitemap Audit",
    "version": "1.0",
    "description": "Audit sitemaps to analyze URLs and structure.",
    "permissions": [
      "activeTab",
      "scripting",
      "storage"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "icons": {
        "16":  "/icons/icon16.png",
        "48":  "/icons/icon48.png",
        "64":  "/icons/icon64.png",
        "128": "/icons/icon128.png"
    }
    }
  }
  